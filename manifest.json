{
  "manifest_version": 3,
  "name": "Gmail URL Scanner",
  "version": "1.0",
  "description": "Scans all links in the currently open Gmail email using urlscan.io",

  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://urlscan.io/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
